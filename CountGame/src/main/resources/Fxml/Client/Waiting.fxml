<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="516.0" prefWidth="773.0" stylesheets="@../../Styles/play.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Background Image - Fill entire pane -->
      <ImageView fitHeight="516.0" fitWidth="773.0" layoutX="0.0" layoutY="0.0" opacity="0.91" pickOnBounds="false" preserveRatio="false">
         <image>
            <Image url="@../../Images/big.png" />
         </image>
      </ImageView>
      
      <Label fx:id="waitingLabel" alignment="CENTER" layoutX="186.0" layoutY="200.0" prefHeight="100.0" prefWidth="400.0" text="Waiting for opponent..." textAlignment="CENTER" wrapText="true" style="-fx-text-fill: white; -fx-background-color: rgba(0, 0, 0, 0.6); -fx-background-radius: 10px; -fx-padding: 20px;" styleClass="game-label">
         <font>
            <Font name="JejuHallasan" size="28.0" />
         </font>
      </Label>
      
      <Button fx:id="btnStart" layoutX="336.0" layoutY="350.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Start" visible="false" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2); -fx-cursor: hand;" styleClass="game-button">
         <font>
            <Font name="JejuHallasan" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>

